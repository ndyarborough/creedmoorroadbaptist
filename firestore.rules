rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Function to check if user is whitelisted
  

    match /pageHeaders/{docId} {
      allow read: if true;
      allow write: if false;
    }
		
    // Whitelist collection - documents use EMAIL as document ID
    match /whitelist/{email} {
      allow read: if true;
      allow write: if false;
    }
    
    match /events/{eventId} {
      allow read: if true;
      // Check if user is authenticated AND their email exists as a document ID in whitelist
      allow create, update, delete: if request.auth != null && 
        exists(/databases/$(database)/documents/whitelist/$(request.auth.token.email));
    }
    
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
